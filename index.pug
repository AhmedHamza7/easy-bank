doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Easy Bank
        link(rel='stylesheet' href='styles/all.min.css')
        link(rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css")
        link(rel='stylesheet' href='styles/style.css')
    body
        //- ======= Nav section ========
        nav
            input(type="checkbox" id="check")
            label(for="check" class="checkbtn")
                img(src='images/icon-hamburger.svg' id='open-nav')
            .nav-content(class='container')
                .nav-logo
                    img(src='images/logo.svg')
                .nav-list
                    ul
                        each val in ['Home', 'Features', 'Clients','Articles', 'Contact']
                            a(href='#'+ val)
                                li.pointer=val
                .nav-button
                    button(class='pointer button-style') Request Invite
        
        //-======= Header Section =======
        header(id='Home')
            .header-content
                    .header-content-text
                        .header-text
                            h2 Next generation #[br] digital banking
                            p Take your financial life online. Your Easybank account will be a one-stop-shop 
                                |for spending, saving, budgeting, investing, and much more.
                            .header-button
                                button(class='pointer button-style') Request Invite
                    .header-content-design
                        .header-design 
                            img(src='images/image-mockups.png')

        //-======= Features section ======
        - var featuresContent = [{animate:'fade-up',srcs: 'images/icon-online.svg',heads: 'Online Banking', text:'We leverage Open Banking to turn your bank account into your financial hub. Control your finances like never before.'},{animate:'fade-down',srcs: 'images/icon-budgeting.svg',heads: 'Simple Budgeting', text:'Our modern web and mobile applications allow you to keep track of your finances wherever you are in the world.'},{animate:'fade-right',srcs: 'images/icon-onboarding.svg',heads: 'Fast Onboarding', text:'  See exactly where your money goes each month. Receive notifications when you’re close to hitting your limits.'},{animate:'fade-left',srcs: 'images/icon-api.svg',heads: 'Open API', text:'Manage your savings, investments, pension, and much more from one account. Tracking your money has never been easier.'}]
        section(class='features section-padding' id='Features') 
            .container 
                div(class="features-title")
                    .title
                        h3 Features
                .features-content 
                    .features-title 
                        h3 Why choose Easybank?
                        p We leverage Open Banking to turn your bank account into your financial hub. #[br]Control your finances like never before.

                    .features-items 
                        each val in featuresContent
                            .item(data-aos=val.animate)
                                img(src=val.srcs)
                                h3 #{val.heads}
                                p #{val.text}

        //-======= clients section ======
        section(class='clients section-padding' id='Clients')
            .container 
                div(class="clients-title")
                    .title
                        h3 Clients
                .clients-content 
                    .item#amazon(data-aos='zoom-in-down') 
                        .amazon-icon 
                            i(class="fa-brands fa-amazon fa-3x")
                        .amazon-text
                            h4 Amazon
                            p is a success partner.
                            span We wish you more progress.
                    .item#apple(data-aos='zoom-in-up') 
                        .apple-icon 
                            i(class="fa-brands fa-apple fa-3x")
                        .apple-text
                            h4 Apple
                            p is a success partner.
                            span We wish you more progress.

                    .item#ps(data-aos='zoom-in-right') 
                        .ps-icon 
                            i(class="fa-brands fa-playstation fa-3x")
                        .ps-text
                            h4 Playstation
                            p is a success partner.
                            span We wish you more progress
                    .item#tiktok(data-aos='zoom-in') 
                        .tiktok-icon 
                            i(class="fa-brands fa-tiktok fa-3x")
                        .tiktok-text
                            h4 Tiktok
                            p is a success partner.
                            span We wish you more progress
                    .item#twitter(data-aos='zoom-in-down') 
                        .twitter-icon 
                            i(class="fa-brands fa-twitter fa-3x")
                        .twitter-text
                            h4 Twitter
                            p is a success partner.
                            span We wish you more progress
                    .item#youtube(data-aos='zoom-in-left') 
                        .youtube-icon 
                            i(class="fa-brands fa-youtube fa-3x")
                        .youtube-text
                            h4 Youtube
                            p is a success partner.
                            span We wish you more progress

        //- ====== articles section ======= 
        - var articlesContent = [{animate:'fade-down',srcs:'images/image-currency.jpg',author:'By Claire Robinson',title:'Receive money in any currency with no fees',text:'  The world is getting smaller and we’re becoming more mobile. So why should you be forced to only receive money in a single …'}, {animate:'fade-left',srcs:'images/image-restaurant.jpg',author:'By Wilson Hutton',title:'Treat yourself without worrying about money',text:'Our simple budgeting feature allows you to separate out your spending and set realistic limits each month. That means you …'},{animate:'fade-right',srcs:'images/image-plane.jpg',author:'By Wilson Hutton',title:'Take your Easybank card wherever you go',text:'  The world is getting smaller and we’re becoming more mobile. So why should you be forced to only receive money in a single …'}, {animate:'fade-up-right',srcs:'images/image-confetti.jpg',author:'By Claire Robinson',title:'Our invite-only Beta accounts are now live!',text:'Our simple budgeting feature allows you to separate out your spending and set realistic limits each month. That means you …'}]
        section(class='articles'  id='Articles')
            .overlay.section-padding
                .container
                    .articles-content 
                        .articles-title 
                            h3 Latest Articles 
                    
                        .articles-items
                            each val in articlesContent 
                                .item(data-aos=val.animate) 
                                    img(src=val.srcs)
                                    .item-text
                                        p#author #{val.author}
                                        h4.pointer #{val.title}
                                        p#details #{val.text}
        
        //-========= contact section ========
        section(class='contact section-padding'  id='Contact')
            .container 
                div(class="contact-title")
                    .title
                        h3 Contact
                div(class="contact-content")
                    .input
                        input(type="text" placeholder="Name")
                    .input
                        input(type="email" placeholder="Email")
                    .text-area
                        textarea( name="" id="" cols="30" rows="10") Message
                    .contact-button
                        button.button-style Send Message
            </div>
        </div>
        //- ======== footer section =======
        footer(class='footer section-padding')
            .container 
                .footer-content
                    .footer-social
                        img(src='images/logo.svg')
                        .social 
                            a(href="")
                                i(class="fa-brands fa-facebook")
                            a(href="")
                                i(class="fa-brands fa-twitter")
                            a(href="")
                                i(class="fa-brands fa-pinterest")
                            a(href="")
                                i(class="fa-brands fa-instagram")
                    .footer-list 
                        ul 
                            each val in ['About us', 'Contact','Blog']
                                li.pointer=val
                        ul 
                            each val in ['Careers', 'Support','Privacy Policy']
                                li.pointer=val
                    .footer-copyright
                        .footer-button 
                            button(class='pointer button-style') Request Invite 
                        .footer-copyright-text 
                            p © Easybank. All Rights Reserved

        script(src="https://unpkg.com/aos@next/dist/aos.js")
        script(src='js/script.js')
        
        
        




